
backup_files_existing_before_symlinking() {
  echo "will backup relevant folders and files that arent symlinks"
  if [[ ! -L "$1" ]] && [[ -d "$1" || -f "$1" ]]; then
     echo "=> $1 exists and is not a symlink backing up so you can symlink correct file"
       mv $1 $1.bak
  fi
}


